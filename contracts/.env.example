# Contract Deployment Configuration
# Copy this file to .env and fill in the values

# Deployer private key (without 0x prefix for forge, with 0x prefix for scripts)
PRIVATE_KEY=

# RPC URLs
RPC_URL=http://localhost:8545
BASE_RPC_URL=https://mainnet.base.org
BASE_SEPOLIA_RPC_URL=https://sepolia.base.org

# Block explorer API key for contract verification
ETHERSCAN_API_KEY=
BASESCAN_API_KEY=

# Chain ID (31337=local, 84532=base-sepolia, 8453=base)
CHAIN_ID=31337

# Treasury address for house edge collection (defaults to deployer if not set)
TREASURY_ADDRESS=

# Oracle address for match resolution (set after oracle service is deployed)
ORACLE_ADDRESS=

# Initial token supply (default: 1 billion)
INITIAL_TOKEN_SUPPLY=1000000000
